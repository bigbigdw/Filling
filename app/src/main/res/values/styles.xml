<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4971EF</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#4971EF</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="MaterialTheme.Bridge" parent="Theme.MaterialComponents.Bridge" />
    <style name="MaterialTheme.Light.Bridge" parent="Theme.MaterialComponents.Light.Bridge" />
    <style name="MaterialTheme.NoActionBar.Bridge" parent="Theme.MaterialComponents.NoActionBar.Bridge" />
    <style name="MaterialTheme.Light.NoActionBar.Bridge" parent="Theme.MaterialComponents.Light.NoActionBar.Bridge" />
    <style name="MaterialTheme.Light.DarkActionBar.Bridge" parent="Theme.MaterialComponents.Light.DarkActionBar.Bridge" />

    <!-- Login -->
    <style name="LoginTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#ffffff</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">#ffffff</item>
    </style>

    <!-- Register -->
    <style name="RegisterTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#ffffff</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#00ffffff</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">#ffffff</item>
    </style>

    <!-- Find -->
    <style name="FindTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="colorAccent">#000000</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textColorHint">#000000</item>
    </style>

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">#ffffff</item>
        <item name="colorControlActivated">#FFBD0B</item>
    </style>
</resources>