<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Item"
    android:layout_width="match_parent"
    android:layout_height="280dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImgLeft"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/TODO"
                app:srcCompat="@drawable/mycoupon_ex02" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="1dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/IconLeft"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/TODO"
                    app:srcCompat="@drawable/coupon_category_icon07_blu" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/MarketLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Coupon_CategoryList"
                    android:textColor="#4971EF"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/NameLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:breakStrategy="simple"
                    android:text="@string/Coupon_CategoryListTitle"
                    android:textColor="#333742"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/PriceLeft"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Coupon_CategoryListPrice"
                    android:textColor="#333742" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImgRight"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:contentDescription="@string/TODO"
                app:srcCompat="@drawable/mycoupon_ex02" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingStart="16dp"
            android:paddingTop="8dp"
            android:paddingEnd="1dp"
            android:paddingBottom="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/IconRight"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:contentDescription="@string/TODO"
                    app:srcCompat="@drawable/coupon_category_icon07_blu" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/MarketRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Coupon_CategoryList"
                    android:textColor="#4971EF"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/NameRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:breakStrategy="simple"
                    android:text="@string/Coupon_CategoryListTitle"
                    android:textColor="#333742"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/PriceRight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/Coupon_CategoryListPrice"
                    android:textColor="#333742" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>