<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImgLeft"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:contentDescription="@string/TODO"
                app:srcCompat="@drawable/dongmu_detail_menu00" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/MenuLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/DongmuDetail_Menu001"
                android:textAlignment="center"
                android:textColor="#333742"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PriceLeft"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/DongmuDetail_Menu002"
                android:textAlignment="center"
                android:textColor="#888888" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ImgRight"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:contentDescription="@string/TODO"
                app:srcCompat="@drawable/dongmu_detail_menu01" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/MenuRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/DongmuDetail_Menu011"
                android:textAlignment="center"
                android:textColor="#333742"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/PriceRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/DongmuDetail_Menu012"
                android:textAlignment="center"
                android:textColor="#888888" />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>