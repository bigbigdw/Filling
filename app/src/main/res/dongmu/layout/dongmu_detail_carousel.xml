<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Menu1Image"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:contentDescription="@string/TODO"
                app:srcCompat="@drawable/dongmu_detail_ex02" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Menu1Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/DongmuDetail_CarouselText1"
                android:textAlignment="center"
                android:textColor="#333742"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Menu1Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/DongmuDetail_CarouselText2"
                android:textAlignment="center"
                android:textColor="#888888" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Menu2Image"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:contentDescription="@string/TODO"
                app:srcCompat="@drawable/dongmu_detail_ex03" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Menu2Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/DongmuDetail_CarouselText3"
                android:textAlignment="center"
                android:textColor="#333742"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Menu2Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/DongmuDetail_CarouselText4"
                android:textAlignment="center"
                android:textColor="#888888" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/Menu3Image"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:contentDescription="@string/TODO"
                app:srcCompat="@drawable/dongmu_detail_ex04" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/Menu3Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/DongmuDetail_CarouselText5"
                android:textAlignment="center"
                android:textColor="#333742"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/Menu3Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/DongmuDetail_CarouselText6"
                android:textAlignment="center"
                android:textColor="#888888" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>